<h1>Login</h1>

<% if @errors %>
  <%= render '/errors' %>
<% end %>

<%= form_tag("/sessions", method: "post") do %>

  <%= label_tag(:email, "Email:") %>
  <%= text_field_tag(:email) %>

  <%= label_tag(:password, "Password:") %>
  <%= text_field_tag(:password) %>

  <%= submit_tag("Submit") %>
<% end %>